<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starwars"
    tools:context="com.example.brenda.projetomobile.MainActivity">

    <Button
        android:id="@+id/botaoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/botao_personalizado"
        android:text="Calculadora" />

    <Button
        android:id="@+id/botaoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botaoA"
        android:layout_alignStart="@+id/botaoA"
        android:layout_below="@+id/botaoA"
        android:layout_marginTop="52dp"
        android:background="@drawable/botao_personalizado"
        android:text="Navegador" />

    <Button
        android:id="@+id/botaoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:background="@drawable/botao_personalizado"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/botaoB"
        android:layout_alignStart="@+id/botaoB" />

    <Button
        android:id="@+id/botaoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Agenda"
        android:background="@drawable/botao_personalizado"
        android:layout_below="@+id/botaoC"
        android:layout_alignLeft="@+id/botaoB"
        android:layout_alignStart="@+id/botaoB" />
</RelativeLayout>
